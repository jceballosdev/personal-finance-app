# EditorConfig para mantener un estilo consistente entre editores y IDEs
root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

# Configuración específica para archivos JSON
[*.json]
indent_size = 2

# Configuración específica para archivos Markdown
[*.md]
trim_trailing_whitespace = false

# Configuración específica para archivos YAML y YML
[*.yml, *.yaml]
indent_size = 2